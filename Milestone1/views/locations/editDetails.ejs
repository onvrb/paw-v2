<div class="container p-3">
  <h3>Edit Location</h3>
  <form action="/locations/edit/<%=location._id%>" method="post">
    <div class="form-group row">
      <label for="name">Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        placeholder="Name of location..."
        name="name"
        required
        value="<%= location.name %>"
        readonly
      />
    </div>
    <div class="form-group row">
      <label for="address">Address</label>
      <input
        type="text"
        class="form-control"
        id="address"
        placeholder="Address of location..."
        name="address"
        required
        value="<%= location.address %>"
      />
    </div>
    <div class="form-group row">
      <label for="capacity">Capacity</label>
      <input
        type="number"
        class="form-control"
        id="capacity"
        placeholder="Capacity of location..."
        name="capacity"
        required
        value="<%= location.capacity %>"
      />
    </div>
    <div class="form-group row">
      <label for="limit">Limit</label>
      <input
        type="number"
        class="form-control"
        id="limit"
        placeholder="Limit of location..."
        name="limit"
        required
        value="<%= location.limit %>"
      />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Edit</button>
  </form>
</div>
