<div class="container mt-5">
  <h1>Event List</h1>
  <% if(events.length>0) { %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Id</th>
          <th scope="col">Event Name</th>
          <th scope="col">Description</th>
          <th scope="col"></th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i<events.length;i++) { %>
          <tr>
            <td scope="row">
              <%=i%>
            </td>
            <td>
              <%=events[i]._id%></a>
            </td>
            <td>
              <%=events[i].name%></a>
            </td>
            <td>
              <%=events[i].description%></a>
            </td>
            <td><a href="/events/show/<%= events[i]._id%> "> View Details </td>
            <td><a href="/events/edit/<%= events[i]._id%> "> Edit</a></td>
            <td><a href="/events/delete/<%= events[i]._id%> "> Delete </a></td>
          </tr>
          <% } %>
      </tbody>
    </table>
    <% } else { %>
      <div>No events found.</div>
      <% } %>
    <a class="btn btn-primary" href="/events/create">Create</a>
</div>